<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".DetailActivity">

        <ImageView
            android:id="@+id/mealImageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/meal_banner" />

        <TextView
            android:id="@+id/titleDetail"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mealImageDetail"
            android:padding="8dp"
            android:text="@string/titleDetail"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <TextView
            android:id="@+id/caloriesDetail"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mealImageDetail"
            android:padding="8dp"
            android:text="@string/caloriesDetail"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <TextView
            android:id="@+id/ingredientsDetail"
            style="@style/MealDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caloriesDetail"
            android:padding="16dp"
            android:text="@string/ingredientsDetail" />

        <TextView
            android:id="@+id/linkToRecipeDetail"
            style="@style/MealDetailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredientsDetail"
            android:padding="8dp"
            android:text="@string/linkToRecipeDetail"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/descriptionDetail"
            style="@style/MealDetailTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linkToRecipeDetail"
            android:padding="16dp"
            android:text="@string/lorem_ipsum_paragraph" />

    </RelativeLayout>
</ScrollView>