<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/meal_image_detail"
            android:contentDescription="@string/meal_image_banner" />

        <TextView
            android:id="@+id/meal_list_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/meal_image_detail"
            android:padding="8dp"
            android:theme="@style/MealItemTitle" />

        <TextView
            android:id="@+id/meal_calories_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_image_detail"
            android:padding="8dp"
            android:textColor="?android:textColorSecondary"
            android:theme="@style/MealItemDetailText" />

        <TextView
            android:id="@+id/meal_ingredients_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_calories_detail"
            android:padding="8dp"
            android:theme="@style/MealItemDetailText" />

        <TextView
            android:id="@+id/meal_link_recipe_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_ingredients_detail"
            android:padding="8dp"
            android:theme="@style/MealItemDetailText" />

        <TextView
            android:id="@+id/meal_description_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meal_link_recipe_detail"
            android:padding="8dp"
            android:theme="@style/MealItemDetailText" />

    </RelativeLayout>


</ScrollView>